{
  "compilerOptions": {
    "outDir": "./build/",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "es5",
    "baseUrl": "./",
    "lib": ["dom", "es6", "es7"]
  },
  "include": ["src"]
}
